<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="e2e, cuucmber, pageobjects"/>
    <bean class="e2e.DriverFactory" scope="cucumber-glue"/>
    <bean class="e2e.cucumber.WebDriverHooks" scope="cucumber-glue"/>
    <bean class="e2e.cucumber.ManageMyBookingLoginSteps" scope="cucumber-glue"/>
</beans>